{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "DOM" 
      ],
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict":true,
      "esModuleInterop": true,
      "jsx": "react",
   }
}